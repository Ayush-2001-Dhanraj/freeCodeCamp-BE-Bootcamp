<div class="accordion container" id="accordionExample">
    <p class="mb-2 fs-6">Your Posts</p>
    <% posts.forEach((item, i)=> {%>
        <div class="accordion-item mb-4">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target=<%=`#collapse_${i}` %> aria-controls=<%=`collapse_${i}`%>>
                        <%= item.title %>
                </button>
            </h2>
            <div id=<%=`collapse_${i}`%> class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body d-flex align-items-center justify-content-between">
                    <pre><%= item.description %></pre>
                    <div class="d-flex gap-2">
                        <form action=<%=`/update/${item.id}` %> method="GET">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-pen"></i>
                            </button>
                        </form>
                        <form action=<%=`/posts/${item.id}` %> method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%}); %>

</div>